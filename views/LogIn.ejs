                                             <!-- //8// -->



                                             <script>
                                                async function clak() {
                                                    const email = document.getElementById("one").value;
                                                    const password = document.getElementById("two").value;
                                            
                                                    // إرسال طلب POST إلى الخادم للتحقق من تسجيل الدخول
                                                    const response = await fetch("/Login", {
                                                        method: "POST",
                                                        headers: { "Content-Type": "application/json" },
                                                        body: JSON.stringify({ email, password })
                                                    });
                                            
                                                    // الحصول على الرد من الخادم
                                                    const result = await response.json();
                                            
                                                    if (result.success) {
                                                        // إذا كانت البيانات صحيحة، إعادة التوجيه للصفحة الرئيسية
                                                        window.location.href = result.redirectUrl;
                                                    } else {
                                                        // عرض رسالة خطأ إذا كانت البيانات غير صحيحة
                                                        document.getElementById("incrct").style.display = "block";
                                                        document.getElementById("incrct").innerText = result.message;
                                                    }
                                                }
                                            </script>
                                            















  
  
  









   


